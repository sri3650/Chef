PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin
# EBS Snapshot. Once in 12 hours
17 07 15 * * root  date >> <%= node.default[:patentdb_application][:snapshot_log_path] %>/snapshots.log && /usr/local/chronus/bin/ec2-create-snapshot <%= node.default[:patentdb_application][:snapshot_log_path] %>/ec2-snapshots.ebs_vol_id "IVIN-PatentDB-<%= node.chef_environment.capitalize %>-10.04 EBS" >> <%= node.default[:patentdb_application][:snapshot_log_path] %>/snapshots.log 2>&1

# Clean old EBS Snapshots. Once in a day
51 08 16 * * root  /usr/local/chronus/bin/ec2-delete-old-snapshots -vf <%= node.default[:patentdb_application][:snapshot_log_path] %>/ec2-snapshots.ebs_vol_id -n 12 >> <%= node.default[:patentdb_application][:snapshot_log_path] %>/snapshots.log 2>&1