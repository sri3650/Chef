#
# Generated by Chef for <%= node['hostname'] %>
#
# Local modifications will be overwritten.
#
# The MySQL database server configuration file.
#
# You can copy this to one of:
# - "/etc/mysql/my.cnf" to set global options,
# - "~/.my.cnf" to set user-specific options.
#
# One can use all long options that the program supports.
# Run program with --help to get a list of available options and with
# --print-defaults to see which it would actually understand and use.
#
# For explanations see
# http://dev.mysql.com/doc/mysql/en/server-system-variables.html

# This will be passed to all mysql clients
# It has been reported that passwords should be enclosed with ticks/quotes
# escpecially if they contain "#" chars...
# Remember to edit /etc/mysql/debian.cnf when changing the socket location.
[client]
port            = <%= node['pdb_mysql']['port'] %>
socket          = <%= node['pdb_mysql']['socket'] %>

# Here is entries for some specific programs
# The following values assume you have at least 32M ram

# This was formally known as [safe_mysqld]. Both versions are currently parsed.
[mysqld_safe]
socket          = <%= node['pdb_mysql']['socket'] %>
nice            = <%= node['pdb_mysql']['nice'] %>

[mysqld]
#
# * Basic Settings
#

#
# * IMPORTANT
#   If you make changes to these settings and your system uses apparmor, you may
#   also need to also adjust /etc/apparmor.d/usr.sbin.mysqld.
#

user            = mysql
pid-file        = <%= node['pdb_mysql']['pid_file'] %>
socket          = <%= node['pdb_mysql']['socket'] %>
port            = <%= node['pdb_mysql']['port'] %>
basedir         = <%= node['pdb_mysql']['basedir'] %>
datadir         = <%= node['pdb_mysql']['data_dir'] %>
tmpdir          = <%= node['pdb_mysql']['tmpdir'].join(':') %>
language        = <%= node['pdb_mysql']['language'] %>
skip-external-locking
default-storage-engine = <%= node['pdb_mysql']['default-storage-engine'] %>
character-set-server = <%= node['pdb_mysql']['tunable']['character-set-server'] %>
collation-server     = <%= node['pdb_mysql']['tunable']['collation-server'] %>

#
# Instead of skip-networking the default is now to listen only on
# localhost which is more compatible and is not less secure.
#bind-address            = <%= node['pdb_mysql']['bind_address'] %>
#
# * Fine Tuning
#
key_buffer_size         = <%= node['pdb_mysql']['tunable']['key_buffer_size'] %>
max_allowed_packet      = <%= node['pdb_mysql']['tunable']['max_allowed_packet'] %>
thread_stack            = <%= node['pdb_mysql']['tunable']['thread_stack'] %>
thread_cache_size       = <%= node['pdb_mysql']['tunable']['thread_cache_size'] %>
#max_connections        = <%= node['pdb_mysql']['tunable']['max_connections'] %>
#table_cache            = <%= node['pdb_mysql']['tunable']['table_cache'] %>
#thread_concurrency     = 10
#
# * Query Cache Configuration
#
query_cache_limit       = <%= node['pdb_mysql']['tunable']['query_cache_limit'] %>
query_cache_size        = <%= node['pdb_mysql']['tunable']['query_cache_size'] %>
#
# * Logging
#
# Both location gets rotated by the cronjob.
# Be aware that this log type is a performance killer.
# As of 5.1 you can enable the log at runtime!
#general_log_file        = <%= node['pdb_mysql']['tunable']['general_log_file'] %>
#general_log             = <%= node['pdb_mysql']['tunable']['general_log'] %>
#
#
log_error = <%= node['pdb_mysql']['tunable']['log_error'] %>

#
# Here you can see queries with especially long duration
<%- if node['pdb_mysql']['version'].to_f >= 5.5 %>
#slow_query_log          = <%= node['pdb_mysql']['tunable']['slow_query_log'] %>
<% else %>
#log_slow_queries        = <%= node['pdb_mysql']['tunable']['slow_query_log'] %>
<% end %>
#long_query_time         = <%= node['pdb_mysql']['tunable']['long_query_time'] %>
#log-queries-not-using-indexes
#
# The following can be used as easy to replay backup logs or for replication.
<%- if node['pdb_mysql']['tunable']['server_id'] %>
#server-id = <%= node['pdb_mysql']['tunable']['server_id'] %>
<% end %>
<%- if node['pdb_mysql']['tunable']['log_bin'] %>
log_bin = <%= node['pdb_mysql']['tunable']['log_bin'] %>
<%- if node['pdb_mysql']['tunable']['log_bin'] %>
binlog_format           = <%= node['pdb_mysql']['tunable']['binlog_format'] %>
<%- end %>
log_slave_updates       = <%= node['pdb_mysql']['tunable']['log_slave_updates'] %>
<%- end %>
<%- if node['pdb_mysql']['tunable']['log_bin_trust_function_creators'] %>
log_bin_trust_function_creators
<%- end %>
expire_logs_days        = <%= node['pdb_mysql']['tunable']['expire_logs_days'] %>
max_binlog_size         = <%= node['pdb_mysql']['tunable']['max_binlog_size'] %>
#binlog_do_db           = include_database_name
#binlog_ignore_db       = include_database_name
<%- if node['pdb_mysql']['tunable']['relay_log'] %>
relay_log               = <%= node['pdb_mysql']['tunable']['relay_log'] %>
<%- end %>
<%- if node['pdb_mysql']['tunable']['relay_log_index'] %>
relay_log_index         = <%= node['pdb_mysql']['tunable']['relay_log_index'] %>
<%- end %>

<%- if node['pdb_mysql']['tunable']['skip_slave_start'] %>
skip_slave_start
<%- end %>
<%- if node['pdb_mysql']['tunable']['read_only'] %>
read_only = 1
<%- end %>

<%- if node['pdb_mysql']['tunable']['transaction-isolation'] %>
transaction-isolation = <%= node['pdb_mysql']['tunable']['transaction-isolation'] %>
<%- end %>

#
# * InnoDB
#
# InnoDB is enabled by default with a 10MB datafile in /var/lib/mysql/.
# Read the manual for more InnoDB related options. There are many!
# You might want to disable InnoDB to shrink the mysqld process by circa 100MB.
#skip-innodb
innodb_data_file_path           = <%= node['pdb_mysql']['tunable']['innodb_data_file_path'] %>
innodb_buffer_pool_size         = <%= node['pdb_mysql']['tunable']['innodb_buffer_pool_size'] %>
innodb_additional_mem_pool_size = <%= node['pdb_mysql']['tunable']['innodb_additional_mem_pool_size'] %>
innodb_log_file_size            = <%= node['pdb_mysql']['tunable']['innodb_log_file_size'] %>
innodb_log_buffer_size          = <%= node['pdb_mysql']['tunable']['innodb_log_buffer_size'] %>
innodb_flush_log_at_trx_commit  = <%= node['pdb_mysql']['tunable']['innodb_flush_log_at_trx_commit'] %>
innodb_lock_wait_timeout        = <%= node['pdb_mysql']['tunable']['innodb_lock_wait_timeout'] %>
# innodb_flush_method=O_DIRECT
# innodb_file_per_table

#innodb_read_io_threads=10

#
# * Security Features
#
# Read the manual, too, if you want chroot!
# chroot = /var/lib/mysql/
#
# For generating SSL certificates I recommend the OpenSSL GUI "tinyca".
#
# ssl-ca=/etc/mysql/cacert.pem
# ssl-cert=/etc/mysql/server-cert.pem
# ssl-key=/etc/mysql/server-key.pem

[mysqldump]
quick
quote-names
max_allowed_packet      = <%= node['pdb_mysql']['tunable']['dump_max_allowed_packet'] %>

[mysql]
default-character-set   = <%= node['pdb_mysql']['tunable']['default-character-set'] %>
#no-auto-rehash # faster start of mysql but no tab completition

[isamchk]
key_buffer              = <%= node['pdb_mysql']['tunable']['key_buffer'] %>


#
# * NDB Cluster
#
# See /usr/share/doc/mysql-server-*/README.Debian for more information.
#
# The following configuration is read by the NDB Data Nodes (ndbd processes)
# not from the NDB Management Nodes (ndb_mgmd processes).
#
# [MYSQL_CLUSTER]
# ndb-connectstring=127.0.0.1

<% case node['platform_family'] -%>
<% when "rhel", "fedora", "suse" -%>
#
# * BerkeleyDB
#
# Using BerkeleyDB is now discouraged as its support will cease in 5.1.12.
skip-bdb
# Default to using old password format for compatibility with mysql 3.x
# clients (those using the mysqlclient10 compatibility package).
old_passwords           = <%= node['pdb_mysql']['old_passwords'] %>

<% else -%>
#
# * IMPORTANT: Additional settings that can override those from this file!
#
!includedir <%= node['pdb_mysql']['confd_dir'] %>/
<% end -%>
