###
# Generated by Chef for <%= node['fqdn'] %>
# Configured as <%= node['postfix']['mail_type'] %>
###

myhostname = <%= node['postfix']['myhostname'] %>
mydomain = <%= node['postfix']['mydomain'] %>
myorigin = <%= node['postfix']['myorigin'] %>

smtpd_banner = $myhostname ESMTP $mail_name
biff = no
append_dot_mydomain = yes

alias_maps = hash:/etc/aliases
alias_database = hash:/etc/aliases
mydestination = localdomain, localhost, localhost.localdomain, localhost
mynetworks = <%= node['postfix']['mail_relay_networks'] %>
mailbox_size_limit = 0
message_size_limit = 26214400
recipient_delimiter = +

inet_interfaces = all

header_size_limit = <%= node['postfix']['header_size_limit'] %>
sender_dependent_relayhost_maps = regexp:/etc/postfix/relayhost_maps.regexp
smtp_connection_cache_destinations = <%= node['postfix']['smtp_connection_cache_destinations'] %>
smtp_sasl_auth_enable = <%= node['postfix']['smtp_sasl_auth_enable'] %>
<% if node['postfix']['smtp_sasl_auth_enable'] == "yes" -%>
smtp_sasl_password_maps = hash:/etc/postfix/sasl_passwd
smtp_sasl_security_options = <%= node['postfix']['smtp_sasl_security_options'] %>
<% end -%>

default_destination_concurrency_limit = <%= node['postfix']['default_destination_concurrency_limit'] %>

soft_bounce = <%= node['postfix']['soft_bounce'] %>
