#!/bin/sh

RAILS_ENV=`/usr/local/chronus/bin/rails_env`

if [ -x /var/log/mysql ] ; then
  for f in `ls /var/log/mysql/*.log` ; do
    logfile=$f-`date +%Y%m%d`
    if [ -e $logfile ] ; then
      gzip $logfile
      /usr/local/chronus/bin/archive_file.rb --file $logfile.gz --dir logs/mysql && rm $logfile.gz
    fi
  done
fi
