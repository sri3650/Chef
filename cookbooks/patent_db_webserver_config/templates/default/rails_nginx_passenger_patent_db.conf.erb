server {
  listen 80;
  server_name <%= node[:ec2][:public_hostname] %>

  # Set the max size for file uploads to 50Mb
  client_max_body_size 50M;

  passenger_enabled on;
  passenger_use_global_queue on;
  rails_env <%= node.chef_environment %>;

  root <%= "#{node[:ivin_application][:current_path]}/public" %>;
  error_page   400 /400.html;
  error_page   500 502 504  /500.html;
  location = /500.html {
    root <%= "#{node[:ivin_application][:current_path]}/public" %>;
  }
    
  #hide hidden files and folders
  location ~ /\..+ {
    deny  all;
  }
    
  #do not show the nginx version number in the server header
  server_tokens off;
     
  # this allows people to use images and css in their maintenance.html file
  if ($request_filename ~* \.(css|jpg|gif|png)$) {
    break;
  }

  # this allows a url /warmup that can be used to cause Passenger to
  # restart after restart.txt has been touched, even if the maintenance
  # page is up.
  if ($uri ~* "^/warmup") {
    break;
  }

  # this rewrites all the requests to the maintenance.html
  # page if it exists in the doc root. This is for capistrano's
  # disable web task
  if (-f $document_root/system/maintenance.html) {
    return 503;
  }

  error_page 503 @503;
  location @503 {
    rewrite  ^(.*)$  /system/maintenance.html break;
  }
}

<% if node.chef_environment.downcase == 'staging' #since ivinbeta certificate is only maintained in patentdb staging %>
# HTTPS server
server {
  listen       443;
  server_name  ivinbeta.intven.com;
  rails_env    <%= node.chef_environment %>;
  root         <%= "#{node[:ivin_application][:current_path]}/public" %>;
  passenger_enabled  on;


  ssl                  on;
  ssl_certificate      <%= "#{node[:ivin_application][:ssl_certificate_path]}/cert/ivinbeta.intven.com.crt" %>;
  ssl_certificate_key  <%= "#{node[:ivin_application][:ssl_certificate_path]}/private/ivinbeta.key" %>;

  ssl_session_timeout  5m;

  ssl_protocols  SSLv2 SSLv3 TLSv1;
  ssl_ciphers  ALL:!ADH:!EXPORT56:RC4+RSA:+HIGH:+MEDIUM:+LOW:+SSLv2:+EXP;
  ssl_prefer_server_ciphers   on;

  client_max_body_size 50m;

  # Public CMS redirection logic
  rewrite ^(.*)$ /site_moved.html break;  

}

